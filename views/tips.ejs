  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've discovered our TIPS!</h1>
    <p class="tip-text">Sleep at leat 8 hours a day.</p>
    <hr>
    <%tips.forEach(function(user){%>
      <%user.tipText.forEach(function(scrt){%>
